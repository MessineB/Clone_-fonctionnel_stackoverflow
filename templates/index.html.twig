
{% extends "base.html.twig"  %}
        {% block body %} 
        {% for post in posts %}
        <div class="container"> 
                <h1> {{post.title}} </h1>
                <p><strong>Ce post a etait cr√©e le : </strong>{{post.createdAt|date('d-m-Y h:i:s')}}
                <p>{{post.content}}<p> 
                <div class="container"> 
                 <a href="{{path("post_like", {"id":post.id} )}}">
                {% if app.user and post.isLikedByUser(app.user) %}
                <p>{{post.likePosts|length}} <i class="fas fa-thumbs-up"></i></p>
                {% else %}
                <p>{{post.likePosts|length}} <i class="far fa-thumbs-up"></i></p> 
                {% endif %}
               </a>
                
                </div>
        </div>
        {% endfor %} 

        {% if app.user %}
      {{form_start(form)}}
       {{form_end(form)}}
      {% endif %}  
{% endblock %}

   